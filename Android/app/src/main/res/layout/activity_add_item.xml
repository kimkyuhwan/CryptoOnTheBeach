<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddItemActivity">

    <TextView
        android:id="@+id/textAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 등록"
        android:textColor="#1fa3ff"
        android:fontFamily="@font/yoongothic"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="24dp"
        />
    
    <ImageView
        android:id="@+id/itemImageBg"
        android:background="#f1f9ff"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textAddItem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageButton
        android:id="@+id/itemImgBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/plus"
        app:layout_constraintLeft_toLeftOf="@+id/itemImageBg"
        app:layout_constraintRight_toRightOf="@+id/itemImageBg"
        app:layout_constraintTop_toTopOf="@+id/itemImageBg"
        app:layout_constraintBottom_toBottomOf="@+id/itemImageBg"
        />
    <EditText
        android:id="@+id/inputName"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        app:layout_constraintTop_toBottomOf="@+id/itemImageBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/yoongothic"
        android:hint="상품명 입력(아이폰7, 삼성노트북 등)"
        android:textSize="12dp"
        android:textColor="#000"
        android:theme="@style/Base.Widget.Design.EditText"
        />
    <EditText
    android:id="@+id/inputDescription"
    android:layout_width="match_parent"
    android:layout_height="40dp"

    app:layout_constraintTop_toBottomOf="@+id/inputName"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="8dp"
    android:fontFamily="@font/yoongothic"
    android:hint="내용"
    android:textSize="12dp"
    android:textColor="#000"
    android:theme="@style/Base.Widget.Design.EditText"
        />
    <EditText
        android:id="@+id/inputCategory"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        app:layout_constraintTop_toBottomOf="@+id/inputDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/yoongothic"
        android:hint="카테고리"
        android:textSize="12dp"
        android:textColor="#000"
        android:theme="@style/Base.Widget.Design.EditText"
        />
    <EditText
        android:id="@+id/inputPrice"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        app:layout_constraintTop_toBottomOf="@+id/inputCategory"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/yoongothic"
        android:inputType="numberDecimal"
        android:hint="가격"
        android:textSize="12dp"
        android:textColor="#000"
        android:theme="@style/Base.Widget.Design.EditText"
        />
    <TextView
        android:id="@+id/inputUUID"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        app:layout_constraintTop_toBottomOf="@+id/inputPrice"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:hint="Phone UUID"
        android:fontFamily="@font/yoongothic"
        android:textSize="12dp"
        android:textColor="#000"
        android:theme="@style/Base.Widget.Design.EditText"
        />
    <ImageButton
        android:id="@+id/uuidLoadBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/artboard8"
        app:layout_constraintTop_toBottomOf="@+id/inputPrice"
        app:layout_constraintLeft_toRightOf="@+id/inputUUID"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/addItemBtn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#1fa3ff"
        android:text="등록"
        android:textColor="#fff"
        android:textSize="13sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="570dp"

        />
</android.support.constraint.ConstraintLayout>