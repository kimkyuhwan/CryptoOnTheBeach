<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trade_layout"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:layout_marginLeft="17dp"
    android:layout_marginRight="17dp"
    android:layout_marginBottom="7dp"
    android:background="@drawable/textlines"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tradeTitle"
        android:fontFamily="@font/yoongothic"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:textSize="12sp"
        android:textColor="#2f2f2f"
        android:text="아이폰7 256GB"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tradeState"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:textSize="11sp"
        android:gravity="center_vertical"

        android:text="거래종료"
        android:textColor="#1fa3ff"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="19dp"
        app:layout_constraintTop_toBottomOf="@+id/sellerTier"
        />
</android.support.constraint.ConstraintLayout>