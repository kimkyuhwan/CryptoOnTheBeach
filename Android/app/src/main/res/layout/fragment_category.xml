<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:background="#1fa3ff"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText

        android:id="@+id/searchBar"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:paddingLeft="10dp"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:background="#ccffffff"
        />
    <ImageButton
        android:id="@+id/searchBtn"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/search_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginRight="21dp"
        />
    
    
    <ImageButton
        android:id="@+id/categoryPhone"
        android:layout_width="100dp"
        android:layout_height="92dp"
        android:background="@drawable/artboard5_phone1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp"
        android:layout_marginLeft="17dp"
        />
    <ImageButton
        android:id="@+id/categoryLaptop"
        android:layout_width="100dp"
        android:layout_height="92dp"
        android:background="@drawable/artboard5_notebook2"
        app:layout_constraintLeft_toRightOf="@+id/categoryPhone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp"
        android:layout_marginLeft="15dp"
        />
    <ImageButton
        android:id="@+id/categoryElectronicProduct"
        android:layout_width="100dp"
        android:layout_height="92dp"
        android:background="@drawable/artboard5_nani5"
        app:layout_constraintLeft_toRightOf="@+id/categoryLaptop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/categoryLarge"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textSize="15sp"
        android:text="PHONE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryPhone"
        android:layout_marginTop="28dp"
        android:background="#1fa3ff"
        android:textColor="#fff"

        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        />
    <ListView
        android:id="@+id/categoryList"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/categoryLarge"
        app:layout_constraintLeft_toLeftOf="parent"

        ></ListView>
    
</android.support.constraint.ConstraintLayout>